<root version='3.3' release='3'>
	<properties>
		<name>Loaded Indicator</name>
		<version>1.1</version>
		<author>bmos (Wil Thieme)</author>
		<description>This extension aids in tracking whether ranged weapons are loaded</description>
		<ruleset name="PFRPG" />
		<ruleset name="3.5E" />
		<dependency name="Full OverlayPackage with other icons" />
	</properties>

	<announcement text="https://github.com/bmos\nLoaded Indicator v1.1:\nThis extension aids in tracking whether ranged weapons are loaded." font="emotefont" />

	<base>
		<!-- Campaign Records -->
		<includefile source="campaign/record_char_actions.xml" />
		<includefile source="campaign/record_charmini_actions.xml" />
		<!-- Strings -->
		<includefile source="strings/strings_weapon_loaded.xml" />
		<!-- Scripts -->
		<script name="AmmunitionManager" file="scripts/manager_ammunition.lua" />
	</base>
</root>
